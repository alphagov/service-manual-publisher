<h1>Guides</h1>

<p>
  <%= link_to "Create a Guide" , new_guide_path, class: 'btn btn-primary' %>
</p>

<table class='table table-bordered'>
  <thead>
    <tr class='table-header'>
      <th>Title</th>
      <th>Last updated by</th>
      <th>Review</th>
      <th>Controls</th>
    </tr>
  </thead>
  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td>
          <%= guide.latest_edition.title %>
          <span class='text-muted'><%= guide.slug %></span>
        </td>
        <td class='last-edited-by'>
          <%= latest_editor_name(guide) %>
        </td>
        <td>
          <% if guide.latest_edition.review_request.present? && guide.latest_edition.review_request.approvals.any? %>
            <% approvals = guide.latest_edition.review_request.approvals %>
            Approved by <%= pluralize(approvals.count, "user")%>: <%= approvals.map {|a| a.user.name }.join(", ") %>
          <% else %>
            <%= guide.needs_review? ? "Needs Review" : "" %>
          <% end %>
        </td>
        <td class='content-controls'>
          <%= link_to edit_action_label(guide), edit_guide_path(guide), class: 'btn btn-default btn-xs' %>
          <%= link_to "View history", guide_editions_path(guide), class: 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

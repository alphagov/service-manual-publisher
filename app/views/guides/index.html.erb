<h1>Guides</h1>

<table class='table table-bordered'>
  <thead>
    <tr class='table-header'>
      <th>Title</th>
      <th>Last updated by</th>
      <th>Review</th>
      <th>State</th>
      <th>Controls</th>
    </tr>
  </thead>
  <tbody>
    <% @guides.each do |guide| %>
      <tr class="<%= table_row_class_for(guide) %>">
        <td>
          <%= guide.latest_edition.title %>
          <span class='text-muted'><%= guide.slug %></span>
        </td>
        <td class='last-edited-by'>
          <%= latest_editor_name(guide) %>
        </td>
        <td>
          <% if !guide.needs_approval? %>
            Approved by <%= pluralize(guide.latest_edition.approvals.count, "user")%>:
            <%= guide.latest_edition.approvals.map {|a| a.user.name }.join(", ") %>
          <% elsif guide.latest_edition.review_requested? %>
            Needs Review
          <% end %>
        </td>
        <td>
          <%= guide.latest_edition.state %>
        </td>
        <td class='content-controls'>
          <%= link_to edit_action_label(guide), edit_guide_path(guide), class: 'btn btn-default btn-xs' %>
          <%= link_to "View history", guide_editions_path(guide), class: 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "Create a Guide" , new_guide_path, class: 'btn btn-primary' %>
</p>

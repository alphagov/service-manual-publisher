<div class='well'>
  <%= form_for @redirect, url: guide_unpublishes_path(@guide) do |f| %>
    <h2>Unpublish <small><%= @guide.slug %></small></h2>

    <div class="form-group">
      <%= f.label :new_path do %>
        Redirect to (<span class="text-info">only published guides and topics will appear in this list</span>)
      <% end %>
      <%=
        f.select :new_path,
          grouped_options_for_select(redirect_destination_select_options),
          {include_blank: "Please choose a path to redirect to"},
          {class: "select2 input-md-12 form-control"}
      %>
      <%= f.error_list :new_path %>
    </div>

    <div class="form-group">
      <%= f.submit "Unpublish", class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
